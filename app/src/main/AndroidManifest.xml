<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Sample">

        <activity
            android:name=".ScoreActivity"
            android:exported="false"
            android:theme="@style/Theme.Sample.Dialog" />

        <activity
            android:name=".EndingDialogActivity"
            android:exported="false"
            android:theme="@style/Theme.Sample" />
        <activity
            android:name=".YesActivity"
            android:exported="false" />

        <activity
            android:name=".CompleteActivity"
            android:exported="false"
            android:theme="@style/Theme.Sample" />
        <activity
            android:name=".FailedActivity"
            android:exported="false"
            android:theme="@style/Theme.Sample" />

        <activity
            android:name=".AssessmentActivity"
            android:exported="false"
            android:label="@string/title_activity_assessment"
            android:theme="@style/Theme.Sample" />
        <activity
            android:name=".finishActivity"
            android:exported="false"
            android:label="@string/title_activity_finish"
            android:theme="@style/Theme.Sample" />
        <activity
            android:name=".SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity android:name=".SkillActivity" />
        <activity android:name=".QuizActivity" />
        <activity android:name=".DashboardActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>